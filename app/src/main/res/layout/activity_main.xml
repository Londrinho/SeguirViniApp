<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/digital_house_photo"
        android:visibility="visible" />

    <TextView
        android:id="@+id/name_of_professor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Vinicius Oliveira"
        android:textColor="#C8000000"
        android:textStyle="bold"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/papel_do_professor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Professor na Digital House" />

    <TextView
        android:id="@+id/cidade_bairro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="São Paulo, Vila Olímpia" />

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="29dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20,583"
                android:padding="3dp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/seguidores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seguidores" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/numeros_de_seguidores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="9,112,824"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vizualizações" />

        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/botao_seguir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#A4000000"
        android:text="seguir"
        android:textAllCaps="true"
        android:textColor="#EBE4E4" />













</LinearLayout>